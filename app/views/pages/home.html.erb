<div class="py-2">
  <!-- This is the page title -->
  <h1 class="font-bold text-4xl">Vi Dash | AI Sounds Collections</h1>
  <!-- This is a description of the page -->
  <p class="pb-4">Find and share sound clips generated by AI</p>

    <% if user_signed_in? %>
      <!-- This button logs the user out -->
      <%= button_to destroy_user_session_path, method: :delete do %>
        <div id="buttonComponent" data-props="<%= {
          active: user_signed_in?,
          message: 'Log Out'
        }.to_json %>"
        />
      <% end %>
    <% else %>
    <!-- This button logs the user in -->
    <%= button_to new_user_session_path do %>
        <div id="buttonComponent" data-props="<%= {
          active: user_signed_in?,
          message: 'Log In'
        }.to_json %>"
        />
      <% end %>
    <% end %>
</div>
